<div class="container">
<div class="row">
<h4>パスワードをお忘れの方</h4>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-horizontal" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :メールアドレス, {class:'col-sm-2 control-label'} %>
    <div class="col-sm-10">
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "パスワード変更メールを送信" %>
  </div>
<% end %>
<br>
<%= link_to "新規登録", new_registration_path(resource_name) %>
<%= link_to "ログイン", new_session_path(resource_name) %>
</div>
</div>
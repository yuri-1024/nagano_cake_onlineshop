<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <br>
      <br>
    　<h4>登録情報編集</h4>
      <br>
      <br>
      <%= form_for(@customer, url: profile_update_path(@customer)) do |f| %>
    <div class="row">
      <div class="col-lg-12">

        <div class="row">
          <div class="form-group">
            <label class="col-xs-3 control-label">名前　（姓）</label>
            <%= f.text_field :name_family, autofocus: true, autocomplete: "name_family", class:"col-xs-4" %>
            <label class="col-xs-1">（名）</label>
            <%= f.text_field :name_first, autofocus: true, autocomplete: "name_first", class:"col-xs-4" %>
          </div>
        </div>

        <div class="row">
          <div class="form-group">
            <label class="col-xs-3 control-label">フリガナ（セイ）</label>
            <%= f.text_field :name_family_kana, autofocus: true, autocomplete: "name_family_kana", class:"col-xs-4" %>
            <label class="col-xs-1 control-label">(メイ)</label>
            <%= f.text_field :name_first_kana, autofocus: true, autocomplete: "name_first_kana", class:"col-xs-4" %>
          </div>
        </div>

        <div class="row">
          <div class="form-group">
            <label class="col-xs-3 control-label">メールアドレス</label>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"col-xs-4" %>
          </div>
        </div>

        <div class="row">
          <div class="form-group">
            <label class="col-xs-3 control-label">郵便番号</label>
            <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class:"col-xs-4" %>
          </div>
        </div>

        <div class="row">
          <div class="form-group">
            <label class="col-xs-3 control-label">住所</label>
            <%= f.text_field :address, autofocus: true, autocomplete: "address", class:"col-xs-9" %>
          </div>
        </div>

        <div class="row">
          <div class="form-group">
            <label class="col-xs-3 control-label">電話番号</label>
            <%= f.text_field :tel, autofocus: true, autocomplete: "tel", class:"col-xs-4" %>
            <div class="col-xs-6"></div>
          </div>
        </div>
<!-- 
        <div class="row">
          <div class="form-group">
            <label class="col-xs-3">パスワード（6文字以上</label>
            <%= f.password_field :password, autocomplete: "new-password", class:"col-xs-4"%>
          </div>
        </div>

        <div class="row">
          <div class="form-group">
            <label class="col-xs-3">パスワード（確認用）</label>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"col-xs-4" %>
          </div>
        </div> -->
      </div>
      
        <div class="row">
          <div class="actions col-lg-5">
            <%= f.submit "編集内容を保存する", class:"btn btn-info" %>
            <% end %>
          </div>
          <div class="col-lx-7">
            <%= link_to(unsubscribe_path) do %>
            <%= button_tag( class: 'btn btn-danger' ) do %>
            退会する
            <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
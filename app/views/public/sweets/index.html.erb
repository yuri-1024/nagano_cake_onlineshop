<div class="container">
	<div class="row">
		<div class="col-lg-3">
			<table class="table table-bordered">
				<thead>
					<tr>
						<th>ジャンル検索</th>
					</tr>
				</thead>
				<tbody>
					<% @genres.each do |genre| %>
					<tr>
						<td>
							<%= link_to(sweets_path(genre_sort:genre.id)) do %>
							<%= genre.name %>
							<% end %>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
		<div class="col-lg-9">
		  <div class="row">
			<h2><%= @sweet_index_title %></h2>
			<% @sweets.each do |sweet| %>
				<table class="col-xs-3">
					<tbody>
						<tr>
							<td>
								<%= link_to(sweet_path(sweet.id)) do %>
							     <%= attachment_image_tag sweet, :image, :fill, 150, 150, format: 'jpeg' %>
							     <% end %>
						    </td>
						</tr>
						<tr>
							<td><%= sweet.name %></td>
						</tr>
						<tr>
							<td>￥<%= sweet.price %></td>
						</tr>
					</tbody>
				</table>
			<% end %>
		  </div>
	    </div>
	</div>
</div>
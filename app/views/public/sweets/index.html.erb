<div class="container">
	<div class="row">
		<div class="col-lg-3">
			<table>
				<thead>
					<tr>
						<th>ジャンル検索</th>
					</tr>
				</thead>
				<tbody>
					<% @genre.each do |genre| %>
					<tr>
						<td>
							<!-- link_to  -->
							<%= genre.name %>
							<!-- end -->
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
		<div class="col-lg-9">
			<h2>商品一覧</h2>
			<% @sweet.each do |sweet| %>
				<table>
					<tbody>

						<tr>
							<td>
								<%= link_to(sweet_path(sweet.id)) do %>
							     image
							     <% end %>
						    </td>
						</tr>
						<tr>
							<td><%= sweet.name %></td>
						</tr>
						<tr>
							<td>￥<%= sweet.price %></td>
						</tr>
					</tbody>
				</table>
			<% end %>
		</div>
	</div>
</div>
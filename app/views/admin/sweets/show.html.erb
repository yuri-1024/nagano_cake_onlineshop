<div class="container">
  <div class="row">
	<div class="col-xs-2"></div>
	<div class="col-xs-10">
	  <h4>商品詳細</h4>
    </div>
  </div>
  <div class="row">
	  <div class="col-xs-2"></div>
	  <div class="col-xs-3">
		<%= attachment_image_tag @sweet, :image, :fill, 200, 200, format: 'jpeg' %>
	  </div>
	  <div class="col-xs-6">
		<p><strong>商品名</strong>　　　　<%= @sweet.name %></p>
		<p><strong>商品説明</strong>　　　<%= @sweet.introduction %></p>
		<p><strong>ジャンル</strong>　　　　<%= @genre.name %></p>
		<p><strong>税込み価格</strong>（税抜き価格)　　　<%= ( @sweet.price * 1.1 ).floor %> ( <%= @sweet.price %> )円 </p>
		<p><strong>販売ステータス</strong>　　　<%= @sweet.is_soldout %></p>
	  </div>
	  <div class="col-xs-1"></div>
  </div>
  <div class="row">
	  <div class="col-xs-9"></div>
	  <div class="col-xs-3">

		<%= link_to(edit_admin_sweet_path(@sweet)) do %>
		<%= button_tag( class: 'btn btn-primary' ) do %>
		編集する
		<% end %>
		<% end %>
	  </div>
	</div>
</div>


<%= form_for(@customer, url: admin_customer_path(@customer.id)) do |f| %>

会員ID　　<%= @customer.id %>

  <div class="field">
    <%= f.label :氏名 %>
    <%= f.text_field :name_family %>
    <%= f.text_field :name_first %>
  </div>

  <div class="field">
    <%= f.label :フリガナ %>
    <%= f.text_field :name_family_kana %>
    <%= f.text_field :name_first_kana %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :郵便番号 %>
    <%= f.text_field :postal_code %>
  </div>

  <div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :電話番号 %>
    <%= f.text_field :tel %>
  </div>

会員ステータス

  <div class="actions">
    <%= f.submit "変更を保存する" %>
  </div>
<% end %>
<div class="container">
  <div class="row">
	<div class="col-md-8 col-md-offset-2">
        <h4>会員一覧</h4>
		<table class="table table-hover">
			<thead>
				<tr>
					<th>会員ID </th>
					<th>氏名</th>
					<th>メールアドレス</th>
					<th>ステータス</th>
				</tr>
			</thead>
			<tbody>
				<% @customer.each do |customer| %>
				<tr>
					<td><%= customer.id %></td>
					<td>
						<%= link_to(admin_customer_path(customer)) do %>
						<%= customer.name_family %><%= customer.name_first %>
						<% end %>
					</td>
					<td><%= customer.email %></td>
					<td>ステータス</td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
  </div>
</div>
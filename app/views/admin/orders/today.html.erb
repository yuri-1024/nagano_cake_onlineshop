<div class="container">
	<div class="row">
		<div class="col-lg-12">
			<h4>本日の注文履歴</h4>
			<table>
					<tr>
						<th>購入日時</th>
						<th>購入者</th>
						<th>注文個数</th>
						<th>注文ステータス</th>
					</tr>
					<% @orders.each do |order| %>
					<tr>
						<td>
							<%= link_to(admin_order_path(order.id)) do %>
							<%= order.created_at %>
							<% end %>
						</td>
						<td><%= order.customer.name_family %></td>
						<td>
							<% total_amount = 0 %>
							<% order.order_lists.each do |order_list| %>
								<% total_amount += order_list.amount %>
						    <% end %>
						    <%= total_amount %>
						</td>
						<td><%= order.status %></td>
					</tr>
					<% end %>
			</table>
		</div>
	</div>
</div>